/**
 * Implements of hook_views_api_alter()
 *
 * Adds views templates.
 */
function parrot_splash_image_views_api_alter(&$list) {

  $list['views']['template path'] = drupal_get_path('module', 'parrot_splash_image') . '/templates';

}

